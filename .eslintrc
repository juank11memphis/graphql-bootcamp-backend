{
  "extends": ["google", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": "2017",
    "sourceType": "module"
  },
  "plugins": ["babel"],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "strict": [2, "never"],
    "require-jsdoc": 0,
    "no-invalid-this": 0,
    "max-len": [1, 120],
    "object-curly-spacing": ["error", "always"],
    "babel/new-cap": 1,
    "switch-colon-spacing": 1,
    "no-await-in-loop": 0,
    "no-trailing-spaces": 0,
    "padded-blocks": 0,
    "arrow-parens": 0,
    "valid-jsdoc": 0
  }
}
